{
  "name": "mech-evolve",
  "version": "2.0.0",
  "description": "Dynamic AI agent system for code evolution and improvement",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:scripts": "bash tests/integration/management-scripts.test.sh",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:scripts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .claude/agent-context/cache",
    "pretest": "npm run build",
    "prepublishOnly": "npm run test:all && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "agents",
    "code-evolution",
    "claude",
    "mech",
    "automation"
  ],
  "author": "Mech Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mech-ai/mech-evolve.git"
  },
  "bugs": {
    "url": "https://github.com/mech-ai/mech-evolve/issues"
  },
  "homepage": "https://evolve.mech.is"
}